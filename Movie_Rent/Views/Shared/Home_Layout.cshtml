<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MoviesRent.com - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("MoviesRent.com - Home Page", "HomePage", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Log Out", "LoginPage", "Login")</li>
                    <li>@Html.ActionLink("Orders", "OrdersPage", "Home")</li>
                    <li>@Html.ActionLink("Watch List", "WatchListPage", "Home")</li>

                        @if (Session["UserType"].ToString() == "manager")
                        {
                            <li>@Html.ActionLink("Manager Zone", "ManagerZonePage", "Manager")</li>
                        }

                    <li><span style="display:inline-block; width: 350px;"></span></li>
                    <li><a>Hello, @Session["UserName"]</a></li>
                </ul>
            </div>
        </div>  
    </div>
    <div class="container body-content">
        <div class="row">
            <div class="col-md-12">
                <img src="~/Content/images/mvc_logo.PNG" class="img-responsive center-block" />
            </div>
        </div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - MoviesRent.com</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
